Root:
    label1_wid: lablList
    label3_wid: lablFinished
    label4_wid: lablFailed

    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            size: 800, 25
            size_hint: (0, None)

            Label:
                text: u'Atualmente, se suporta arquivos de extens\u00E3o: .docx, .pdf e .txt'
                halign: "center"
                valign: "top"
                text_size: self.size
                canvas.before:
                    Color:
                        rgb: .15, .15, .15
                    Rectangle:
                        pos: self.pos
                        size: self.texture_size
        
        BoxLayout:
            orientation: 'horizontal'
            size: 800, 40
            size_hint: (0, None)

            Label:
                text: u'\nArquivos presentes na fila de convers\u00E3o'
                outline_color: 0, 0, 0
                outline_width: 2
                halign: "center"
                valign: "top"
                text_size: self.size
                canvas.before:
                    Color:
                        rgb: .15, .15, .15
                    Rectangle:
                        pos: self.pos
                        size: self.texture_size
        BoxLayout:
            orientation: 'horizontal'

            Label:
                id: lablList
                outline_color: 0, 0, 0
                outline_width: 2
                valigh: 'top'
                size_hint:(1.0, 1.0)
                halign: "center"
                valign: "top"
                text_size: self.size
                canvas.before:
                    Color:
                        rgb: .15, .15, .15
                    Rectangle:
                        pos: self.pos
                        size: self.size
        BoxLayout:
            orientation: 'horizontal'
            size: 800, 40
            size_hint: (0, None)

            Label:
                text: '\nFinalizados'
                outline_color: 0, 0, 0
                outline_width: 2
                halign: "center"
                valign: "top"
                text_size: self.size
                canvas.before:
                    Color:
                        rgba: .1, .7, .5, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size

            Label:
                text: '\nCom falha'
                outline_color: 0, 0, 0
                outline_width: 2
                halign: "center"
                valign: "top"
                text_size: self.size
                canvas.before:
                    Color:
                        rgba: 1, 0, 0, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
        BoxLayout:
            Label:
                id: lablFinished
                size_hint:(1.0, 1.0)
                halign: "center"
                valign: "top"
                text_size: self.size
                outline_color: 0, 0, 0
                outline_width: 2
                canvas.before:
                    Color:
                        rgba: .1, .7, .5, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                canvas.after:
                    Rectangle:
                        size: self.width - 350, self.height - 160
                        pos: self.x + 10, self.y + 35
                        source: 'Done.png' 


            Label:
                id: lablFailed
                size_hint:(1.0, 1.0)
                halign: "center"
                valign: "top"
                text_size: self.size
                outline_color: 0, 0, 0
                outline_width: 2
                canvas.before:
                    Color:
                        rgba: 1, 0, 0, 1
                    Line:
                        width: 1.1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                canvas.after:
                    Rectangle:
                        size: self.width - 330, self.height - 160
                        pos: self.x + 320, self.y + 35
                        source: 'Error.png' 

        BoxLayout:
            size_hint_y: None
            height: 50
            Button:
                text: 'Selecionar Arquivos'
                on_release: root.show_load()
            Button:
                text: u'Selecionar L\u00EDngua'
                on_release: root.show_lang()
            Button:
                text: u'Iniciar Convers\u00E3o'
                on_release: root.convert()

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"

        BoxLayout:
            size_hint_y: None
            height: 50
            Button:
                text: 'Icon View'
                on_press: filechooser.view_mode = 'icon'
            Button:
                text: 'List View'
                on_press: filechooser.view_mode = 'list'

        FileChooser:
            id: filechooser
            path: root.defaultPath
            FileChooserIconLayout
            FileChooserListLayout

        BoxLayout:
            size_hint_y: None
            height: 50
            Button:
                text: "Cancelar"
                on_release: root.cancel()
            Button:
                text: "Selecionar"
                on_release: root.load(filechooser.path, filechooser.selection)

<LangDialog>:
    listValues: spinner_1.values
    initialValue: spinner_1.text
    listFiles: label_1.text

    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"

        BoxLayout:
            size: 750, 80
            size_hint: (0, None)
            Label:
                text: u'\nSer\u00E3o convertidos o(s) seguinte(s) arquivo(s):\n'
                font_size: '25dp'
                outline_color: 0, 0, 0
                outline_width: 2

        BoxLayout:
            Label:
                id: label_1
                text: root.listFiles
                halign: "center"
                valign: "top"
                font_size: '20dp'
                text_size: self.size
                outline_color: 0, 0, 0
                outline_width: 2
                canvas.before:
                    Rectangle:
                        size: self.width - 400, self.height - 20
                        pos: self.x + 180, self.y + 40
                        source: 'mp3-file.png'
        BoxLayout:
            size_hint_y: None
            height: 50
            Spinner:
                id: spinner_1
                text: root.initialValue
                values: root.listValues
                size_hint: [0.5,None]
                height: '40dp'
                on_text: root.choosenLang = root.initialValue

        BoxLayout:
            size_hint_y: None
            height: 50
            Button:
                text: "Cancelar"
                on_release: root.cancel()
            Button:
                text: "Continuar"
                on_release: root.save(root.choosenLang)
